{
	"compilerOptions": {
		"module": "ESNext",
		"target": "ESNext",
		"moduleResolution": "node",
		"verbatimModuleSyntax": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true,
		"forceConsistentCasingInFileNames": true,
		"removeComments": true,
		"sourceMap": true,
		"newLine": "lf",
		"strict": true,
		"skipLibCheck": true
	},
	"exclude": ["node_modules"]
}
